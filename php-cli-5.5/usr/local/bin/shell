#!/bin/bash
set -e

## common settings
/usr/local/bin/php_common_settings.sh

# load common functions
source /usr/local/bin/functions.sh

# General php setting
for ENV_VAR in $(envListVars "php\."); do
    env_key=${ENV_VAR#php.}
    env_val=$(envGetValue "$ENV_VAR")
    echo "$env_key = ${env_val}" >> /etc/php5/cli/php.ini
done

/bin/bash -c "$@"
